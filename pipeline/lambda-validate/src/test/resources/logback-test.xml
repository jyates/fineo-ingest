<configuration>
  <appender name="LAMBDA" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %logger{3}[%L] - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="io.fineo.lambda" level="TRACE"/>
  <root level="INFO">
    <appender-ref ref="LAMBDA"/>
  </root>
</configuration>
